<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <h2>Food Items</h2>
    <a href="/users/new">Add Something New to the Pantry</a>
    <% if (foods.length > 0) { %>
        <ul>
            <% foods.forEach(food => { %>
          <li>
              <%= food.name %>
              <form action="/users/foods/<%= food._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
              </form>
              <form action="/users/<%= user._id %>/foods/<%= food._id %>/edit" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
          </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>My pantry shelves are bare.</p>
    <% } %>
  </body>
</html>
